##########################
##### Common aliases #####
##########################

alias sudo='sudo ' # the space tells it respect aliases from this file

# Color outputs
alias grep='grep --color=always'
alias fgrep='fgrep --color=always'
alias tmux='tmux -2'

alias ipl='ipython --pylab'
alias qp='python'

alias findgrep='find . | xargs grep'
alias lst='date;ls -lt | head'
alias spacerm="find -name '* *' -type f | rename 's/ /_/g'"

alias htopm='htop --sort-key PERCENT_MEM'
alias htopc='htop --sort-key PERCENT_CPU'

alias git-status-all='find . -type d -name ".git" | while read dir ; do sh -c "cd $dir/../ && echo -e \"\nGIT STATUS IN ${dir//\.git/}\" && git status -s" ; done'
alias cd-git-head='cd $(git rev-parse --show-toplevel)'

alias R='R --quiet'

alias emacs='emacs -nw'

###############################
##### OS Specific aliases #####
###############################

if [[ $(uname) == 'Darwin' ]]; then
    alias ls='ls -AhFG'
    alias rmds_store='find . -name ".DS_Store" -print0 | xargs -0 rm'
elif [[ $(uname) == 'Linux' ]]; then
    alias ls='ls -AFh --color'
    alias nautilus='nautilus --no-desktop'         # to avoid nautilus killing feh wallpaper
    alias sudop='sudo env PATH=$PATH'              # Let sudo use my path
    alias lp2='lp -o KMDuplex=True -o fit-to-page' # Specific for Kinota Milota
    alias lp2s='lp2 -o StapleLocation=LeftW'       # Specific for Kinota Milota
    alias bc='bc -l'
    alias temacs='emacs -nw'
    alias bemacs='TERM=xterm emacs -nw' # for TTY
else
    alias ls='ls -AhG --color'
    alias R='/cygdrive/c/Program\ Files/R/R-3.1.3/bin/R --no-save --quiet'
fi
